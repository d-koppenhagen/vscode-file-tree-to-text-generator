{
	"name": "file-tree-to-text-generator",
	"displayName": "file-tree-to-text-generator",
	"description": "Print the selected directory within it's files and subdirectories as text (multiple formats available)",
	"version": "0.3.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/d-koppenhagen/vscode-file-tree-to-text-generator.git"
	},
	"author": {
		"name": "Danny Koppenhagen",
		"email": "mail@d-koppenhagen.de",
		"url": "http://d-koppenhagen.de"
	},
	"engines": {
		"vscode": "^1.37.0"
	},
  "icon": "images/icon.png",
  "galleryBanner": {
		"color": "beige",
		"theme": "light"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"markdown",
		"ascii",
		"asciitree",
		"latex",
		"tex",
		"dirtree",
		"tree",
		"filetree",
		"dirtree"
	],
	"activationEvents": [
    "onCommand:extension.fileTreeToText"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.fileTreeToText",
				"title": "File Tree To Text"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "explorerResourceIsFolder",
					"command": "extension.fileTreeToText",
					"group": "cmdGroup@1"
				}
			]
    },
    "configuration": {
			"id": "tree-generator",
			"type": "object",
			"title": "File Tree To Text Generator configuration",
			"properties": {
				"tree-generator.defaultDepth": {
					"type": "integer",
					"default": 5,
					"description": "Default max depth of the generated tree"
        },
        "tree-generator.defaultTarget": {
          "type": "string",
          "enum": [
            "ASCII",
            "LaTeX",
            "Markdown"
          ],
					"default": "ASCII",
					"description": "Set your default output format"
        },
        "tree-generator.prompt": {
					"type": "boolean",
					"default": true,
					"description": "Choose if the user will be promt or if the default settings will  be applied"
        }
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.37.0",
		"@types/fs-extra": "^8.0.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.2"
	},
	"publisher": "d-koppenhagen",
	"dependencies": {
		"fs-extra": "^8.1.0"
	}
}
